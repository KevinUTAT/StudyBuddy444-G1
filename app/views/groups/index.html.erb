<table class="table">
    <thead class="thead-dark">
        <th scope="col"><h4>Lead</h4></th>
        <th scope="col"><h4>Course</h4></th>
        <th scope="col"><h4>Description</h4></th>
        <th scope="col"><h4>Date</h4></th>
        <th scope="col"><h4>Time</h4></th>
        <th scope="col"><h4>Duration (hrs)</h4></th>
        <th scope="col"><h4>Location</h4></th>
        <th scope="col"><h4>Capacity</h4></th>
        <th scope="col"><h4>Expand</h4></th>
    </thead>
    <tbody>
    <% @groups.each do |group| %>
        <tr>
            <td><%= group.user.page.name %></td>
            <td><%= group.category %></td>
            <td><%= group.description %></td>
            <td><%= group.date %></td>
            <td><%= group.time.to_s(:time) %></td>
            <td><%= group.duration %></td>
            <td><%= group.location %></td>
            <td><%= group.capacity %></td>
            <td><%= link_to 'Show', controller: "groups", action: "show", id: group %></td>
        </tr>
    </tbody>
    <% end %>

</table>
