<div class="row">
    <div class="col-12 text-center">

        <h1>
        Jobs
        </h1>
        <button class="btn btn-outline-success my-2 my-sm-0"><a><%= link_to "Create Job", new_post_path%></a></button>


    </div>

</div>


<div  class="row" >
<% @posts.each do |post|%>
    <div class="col-md-3 col-sm-6" style="margin-top:8vh;">
        <div class="card">
            
            <div class="card-body">
                
                <h2 class="card-title title"><%= link_to post.title, post %></h2>


                <p class="card-text"><%= post.content %></p>
                <p class="card-text"><%= post.limit %></p>
                <p class="card-text"><small class="text-muted"><%= post.user.email %></small></p>



            </div>
            <div class="card-footer">
                <p class="card-text"><small class="text-muted">updated <%= time_ago_in_words(post.created_at)%> ago</small></p>

            </div>
        </div>
    </div>
<% end %>
</div>
