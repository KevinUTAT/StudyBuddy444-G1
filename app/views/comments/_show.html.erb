<h2 class="comment">Discussion</h2>
<% @note.comments.each do |comment| %>
    <div class="comment">
        <p>
            <strong>
                <%= link_to comment.username+":", page_path(comment.user.id), :class => 'link_to_color' %>
            </strong>
        </p>
        <p>
            <%= comment.body %>
            <% if current_user.id == comment.user.id || current_user.id == @note.user.id %>
            <%= link_to 'Delete', [comment.note, comment], method: :delete,
                data: { confirm: 'Are you sure you want to delete this?' }, :class => 'deletecomment' %>
            <% end %>
        </p>
        <div class="date">
            <p class="card-text"><small class="text-muted">Posted <%= time_ago_in_words(comment.created_at)%> ago</small></p>
        </div>
    </div>
<% end %>
