<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>About me</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <%next if current_user.id == page.user_id %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.about_me %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%# link_to 'Edit', edit_page_path(page) %></td>
        <td><%#link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

